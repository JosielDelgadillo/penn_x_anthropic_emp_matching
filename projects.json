{
    "projects": [
        {
            "project_name": "OrgLens",
            "Description": "OrgLens is an internal tool that builds an organizational knowledge graph by ingesting GitHub, Jira, and document data, enabling expert discovery and AI Twin chat.",
            "core_features": [
                "Multi-source data ingestion (GitHub, Jira, internal docs)",
                "Expert Discovery Engine for semantic SME search",
                "Dynamic user profile generation",
                "AI Twin chat using Claude with RAG",
                "Optional voice interaction layer"
            ],
            "architecture_stack": {
                "backend": {
                    "language": "Python 3.11+",
                    "framework": "FastAPI",
                    "llm_integration": "Anthropic Claude 3",
                    "orchestration": [
                        "LangChain",
                        "LlamaIndex"
                    ]
                },
                "storage": {
                    "vector_database": [
                        "ChromaDB",
                        "Pinecone"
                    ],
                    "graph_or_relational_database": [
                        "Neo4j",
                        "PostgreSQL"
                    ]
                },
                "frontend": {
                    "framework": [
                        "Next.js",
                        "Streamlit"
                    ],
                    "styling": "Tailwind CSS"
                },
                "audio_optional": {
                    "services": [
                        "ElevenLabs",
                        "OpenAI Whisper"
                    ]
                }
            },
            "data_model_and_pipeline": {
                "entities": {
                    "Person": [
                        "id",
                        "name",
                        "role",
                        "email"
                    ],
                    "Artifact": [
                        "id",
                        "type",
                        "content",
                        "summary",
                        "created_at"
                    ],
                    "Relationships": [
                        "Person --AUTHORED--> Artifact",
                        "Person --RESOLVED--> Artifact",
                        "Person --MENTIONED_IN--> Artifact"
                    ]
                },
                "ingestion_pipeline_flow": [
                    "Fetcher",
                    "Claude Summarizer",
                    "Vectorization",
                    "Graph Linking"
                ],
                "summarizer_prompt": "Analyze this git commit diff and summarize its technical intent."
            },
            "api_endpoints": [
                {
                    "method": "POST",
                    "path": "/ingest/github",
                    "input": {
                        "repo_url": "string",
                        "branch": "string"
                    },
                    "action": "Clone repository, summarize commits, store results.",
                    "output": {
                        "ingested_commits": "int",
                        "status": "ok|error"
                    }
                },
                {
                    "method": "POST",
                    "path": "/search/expert",
                    "input": {
                        "query": "string"
                    },
                    "logic": [
                        "Embed query",
                        "Hybrid search",
                        "Rank persons"
                    ],
                    "output": [
                        {
                            "person_id": "string",
                            "name": "string",
                            "score": "float",
                            "relevance_reason": "string",
                            "evidence_artifacts": [
                                "string"
                            ]
                        }
                    ]
                },
                {
                    "method": "POST",
                    "path": "/chat/twin/{person_id}",
                    "input": {
                        "message": "string"
                    },
                    "logic": [
                        "Retrieve artifacts",
                        "Construct Claude prompt",
                        "Generate response"
                    ],
                    "output": {
                        "response": "string"
                    }
                }
            ],
            "prompt_engineering": {
                "expert_finder_prompt": {
                    "system_prompt": "You are an expert-finding assistant..."
                }
            },
            "acceptance_criteria": [
                "Commits successfully ingested",
                "Expert search returns relevant SME",
                "AI Twin gracefully refuses when lacking context"
            ],
            "notes": "MVP uses local sample data."
        },
        {
            "project_name": "RetailForecastPro",
